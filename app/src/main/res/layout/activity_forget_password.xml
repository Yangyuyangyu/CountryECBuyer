<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.countryecbuyer.activity.login.ForgetPasswordActivity">

    <include layout="@layout/my_top_actionbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/item_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置新密码"
            android:textColor="@color/liuliuliu"
            android:textSize="20sp" />
    </RelativeLayout>

    <View style="@style/lineStyle" />

    <LinearLayout
        android:id="@+id/forget_user_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:minHeight="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="手机号码"
            android:textSize="16sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:background="@null"
            android:hint="请输入您的手机号"
            android:textColorHint="@color/gray_btn_bg_pressed_color"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        style="@style/lineStyle"
        android:layout_marginLeft="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="验证码　"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/forget_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入短信验证码"
            android:textColorHint="@color/gray_btn_bg_pressed_color"
            android:textSize="16sp" />

        <Button
            android:id="@+id/forget_getCode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_green_frame"
            android:text="获取验证码"
            android:textColor="@android:color/holo_green_light"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        style="@style/lineStyle"
        android:layout_marginLeft="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:minHeight="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="新密码　"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/forget_user_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:background="@null"
            android:hint="请输入8~20位新密码"
            android:textColorHint="@color/gray_btn_bg_pressed_color"
            android:textSize="16sp" />
    </LinearLayout>

    <View style="@style/lineStyle" />

    <Button
        android:id="@+id/forget_user_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_green_selector"
        android:minHeight="40dp"
        android:text="确认提交"
        android:textColor="@android:color/white"
        android:textSize="16sp" />


</LinearLayout>
