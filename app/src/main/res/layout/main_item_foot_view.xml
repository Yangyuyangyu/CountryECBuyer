<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/main_item_foot_LL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="你可能感兴趣"
            android:textColor="@color/red_color"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/main_item_foot_img1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_test_bg" />

        <ImageView
            android:id="@+id/main_item_foot_img2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/main_item_foot_img1"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_load_img" />

        <ImageView
            android:id="@+id/main_item_foot_img3"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/main_item_foot_img2"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_test_bg" />

    </LinearLayout>
</merge>
