<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/gray_bg"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/fragment_me_recruitment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="商家入驻"
        android:textColor="@color/three"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="我"
        android:textColor="@color/three"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/fragment_me_message"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:src="@drawable/icon_kefu_n"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/fragment_me_setting"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/fragment_me_message"
        android:gravity="center"
        android:padding="10dp"
        android:src="@drawable/icon_setting" />

    <include
        layout="@layout/view_msg_circle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:padding="10dp" />


</RelativeLayout>
