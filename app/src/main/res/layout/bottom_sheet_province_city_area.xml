<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/bs_addr_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="right"
        android:padding="10dp"
        android:text="完成"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="16sp" />

    <cn.carbswang.android.numberpickerview.library.NumberPickerView
        android:id="@+id/addr_picker"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:background="@color/gray_bg"
        android:contentDescription="test_number_picker_view"
        app:npv_DividerColor="@color/line"
        app:npv_DividerHeight="0.1dp"
        app:npv_ItemPaddingHorizental="5dp"
        app:npv_ItemPaddingVertical="5dp"
        app:npv_ShowCount="5"
        app:npv_TextColorSelected="@color/three"
        app:npv_TextSizeNormal="16sp"
        app:npv_TextSizeSelected="20sp"
        app:npv_WrapSelectorWheel="true" />
</LinearLayout>
