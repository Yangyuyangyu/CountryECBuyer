<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="了解配送方式"
        android:textColor="@color/three"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/bs_express_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:padding="10dp"
        android:src="@drawable/icon_delete_gray" />

    <View
        style="@style/lineStyle"
        android:layout_below="@id/bs_express_cancel" />

    <ImageView
        android:id="@+id/bs_goods_addr_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/bs_express_cancel"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_test_bg" />

    <View
        style="@style/lineStyle"
        android:layout_below="@id/bs_goods_addr_img" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bs_goods_addr_img"
        android:padding="10dp"
        android:text="由商家选择合作快递为你服务,运费10.00元" />
</RelativeLayout>
