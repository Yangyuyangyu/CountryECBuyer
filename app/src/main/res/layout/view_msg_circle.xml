<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_message_relayout"
    android:layout_width="?attr/actionBarSize"
    android:layout_height="?attr/actionBarSize"
    android:gravity="center">

    <ImageView
        android:id="@+id/view_message_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/icon_message_black" />

    <View
        android:id="@+id/view_message_point"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_alignRight="@id/view_message_img"
        android:layout_alignTop="@id/view_message_img"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/rounded_circle_red" />
</RelativeLayout>
