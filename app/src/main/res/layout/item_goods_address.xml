<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="15dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <CheckBox
            android:id="@+id/item_goods_addr_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:button="@null"
            android:checked="true"
            android:clickable="false"
            android:drawableLeft="@drawable/checkbox_shopcart_selector"
            android:padding="10dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/item_goods_addr_name_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/item_goods_addr_checkbox"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/item_goods_addr_checkbox"
            android:text="洋芋 18281602222"
            android:textColor="@color/three"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_goods_addr_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_goods_addr_name_phone"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/item_goods_addr_checkbox"
            android:text="四川省成都市龙泉驿区果壳里"
            android:textColor="@color/gray_btn_bg_pressed_color"
            android:textSize="15sp" />

        <View
            style="@style/lineStyle"
            android:layout_alignParentTop="true" />

        <View
            style="@style/lineStyle"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
