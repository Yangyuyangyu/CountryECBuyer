<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:contentPadding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_browshistory_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_test_bg" />

        <TextView
            android:id="@+id/item_browshistory_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/item_browshistory_img"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="创意手动压榨水果奶昔冰激凌创意手动压榨水果奶昔冰激凌水果奶昔冰"
            android:textColor="@color/three"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_browshistory_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_browshistory_img"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/item_browshistory_img"
            android:text="￥ 88.00"
            android:textColor="@color/red_color"
            android:textSize="16sp" />

        <View
            style="@style/lineStyle"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="135dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
