<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.countryecbuyer.activity.me.meHaveBuyActivity">

    <include layout="@layout/my_top_actionbar" />

    <android.support.design.widget.TabLayout
        android:id="@+id/have_buy_tablayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/red_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/gray_bg" />

    <android.support.v4.view.ViewPager
        android:id="@+id/have_buy_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
