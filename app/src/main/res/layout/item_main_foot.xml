<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/gray_bg"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@android:color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_main_foot_img"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_shop_test" />

        <TextView
            android:id="@+id/item_main_foot_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="良品铺子热销推荐良品铺子热销推荐良品铺子热销推荐良品铺子热销推荐"
            android:textColor="@color/three"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_main_foot_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="￥ 66.00"
            android:textColor="@color/red_color"
            android:textSize="16sp" />
    </LinearLayout>
</android.support.v7.widget.CardView>
