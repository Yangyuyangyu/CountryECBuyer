<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/fragment_me_order_waitPay"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@drawable/icon_me_test"
        android:gravity="center"
        android:padding="4dp"
        android:text="待付款"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/fragment_me_order_waitOrder"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@drawable/icon_me_test"
        android:gravity="center"
        android:padding="4dp"
        android:text="待接单"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/fragment_me_order_waitDeliver"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@drawable/icon_me_test"
        android:gravity="center"
        android:padding="4dp"
        android:text="待发货"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/fragment_me_order_waitReceiving"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@drawable/icon_me_test"
        android:gravity="center"
        android:padding="4dp"
        android:text="待收货"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/fragment_me_order_finish"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@drawable/icon_me_test"
        android:gravity="center"
        android:padding="4dp"
        android:text="已完成"
        android:textSize="14sp" />
</LinearLayout>
