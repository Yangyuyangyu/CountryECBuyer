<?xml version="1.0" encoding="utf-8"?>
<com.flipboard.bottomsheet.BottomSheetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bs_goods_addr_new_bottomSheetLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:text="新增收货地址"
                android:textColor="@color/three"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/bs_goods_addr_new_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:padding="10dp"
                android:src="@drawable/icon_delete_gray" />
        </RelativeLayout>

        <View style="@style/lineStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="收货人　"
                android:textColor="@color/three"
                android:textSize="16sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="35dp"
                android:background="@null"
                android:hint="请输入姓名"
                android:textColor="@color/three"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            style="@style/lineStyle"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="联系电话"
                android:textColor="@color/three"
                android:textSize="16sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="35dp"
                android:background="@null"
                android:hint="联系电话"
                android:textColor="@color/three"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            style="@style/lineStyle"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="选择地区"
                android:textColor="@color/three"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="35dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/receive_addr_new_province"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="选择省份"
                    android:singleLine="true"
                    android:textColor="@color/three"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/receive_addr_new_city"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="选择城市"
                    android:singleLine="true"
                    android:textColor="@color/three"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/receive_addr_new_area"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="选择地区"
                    android:singleLine="true"
                    android:textColor="@color/three"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/lineStyle"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="详细地址"
                android:textColor="@color/three"
                android:textSize="16sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="35dp"
                android:background="@null"
                android:hint="街道门牌信息"
                android:textColor="@color/three"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            style="@style/lineStyle"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="邮政编码"
                android:textColor="@color/three"
                android:textSize="16sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="35dp"
                android:background="@null"
                android:hint="邮政编码(选填)"
                android:textColor="@color/three"
                android:textSize="16sp" />
        </LinearLayout>

        <View style="@style/lineStyle" />

        <Button
            android:id="@+id/bs_goods_addr_vew_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_green_selector"
            android:minHeight="40dp"
            android:text="保存"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>
</com.flipboard.bottomsheet.BottomSheetLayout>
